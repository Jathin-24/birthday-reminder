generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  name      String?
  birthdays Birthday[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Birthday {
  id        String   @id @default(cuid())
  name      String
  date      DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
